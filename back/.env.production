# Backend Environment Variables for Render
# =========================================

# Database - PostgreSQL from Render
DATABASE_URL="postgresql://user:password@host:port/database"
# Ejemplo: postgresql://testadmin_user:abc123@dpg-xyz.oregon-postgres.render.com/testadmin_db

# JWT Configuration
JWT_SECRET="cambia-esta-clave-por-una-muy-segura-y-aleatoria-en-produccion"
JWT_EXPIRES_IN="24h"

# Environment
NODE_ENV="production"
PORT=3001

# Frontend URL (tu dominio de Vercel)
FRONTEND_URL="https://tu-app.vercel.app"
